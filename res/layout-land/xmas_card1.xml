<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/xmas_card1_bg"
    android:focusable="true"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        android:text="Merry XMas!!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="36dp" />

    <ImageView
        android:id="@+id/xmasProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"
        android:scaleType="fitCenter"
        android:src="@drawable/xmas_person" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/xmasProfile"
        android:layout_alignRight="@+id/xmasProfile"
        android:layout_marginRight="16dp"
        android:onClick="onClickCamera"
        android:src="@android:drawable/ic_menu_camera" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/xmasProfile"
        android:layout_alignLeft="@+id/xmasProfile"
        android:layout_marginLeft="20dp"
        android:onClick="onClickGallery"
        android:src="@android:drawable/ic_menu_gallery" />

</RelativeLayout>