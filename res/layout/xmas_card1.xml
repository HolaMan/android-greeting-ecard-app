<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:scaleType="center"
        android:src="@drawable/xmas_card1_bg" />

    <ImageView
        android:id="@+id/xmasProfile"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"
        android:layout_x="224dp"
        android:layout_y="38dp"
        android:scaleType="fitCenter"
        android:src="@drawable/xmas_person" />

    <ImageView
        android:id="@+id/imageViewGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_x="225dp"
        android:layout_y="9dp"
        android:onClick="onClickGallery"
        android:src="@android:drawable/ic_menu_gallery" />

    <ImageView
        android:id="@+id/imageViewCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_x="324dp"
        android:layout_y="8dp"
        android:onClick="onClickCamera"
        android:src="@android:drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="168dp"
        android:layout_height="128dp"
        android:layout_x="13dp"
        android:layout_y="213dp"
        android:ems="10"
        android:text="Long time no see.... how are you recently?  Take care yourself and mery christmas!!!" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="18dp"
        android:layout_y="495dp"
        android:text="your best friend, "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_x="180dp"
        android:layout_y="487dp"
        android:ems="10"
        android:text="Chris Chang" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_x="94dp"
        android:layout_y="92dp"
        android:ems="10"
        android:text="Michelle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="104dp"
        android:text="Dear"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff00ff" />

</AbsoluteLayout>